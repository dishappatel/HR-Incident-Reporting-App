<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="60px"
        android:layout_marginTop="20dp"
        android:text="WelCome to Incident Reporting App."
        android:id="@+id/txtView"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:textSize="40px"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:text="Using this app we can report incident to HR Department."

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:text="\n * To report incident select report incident option from option menu.
\n * To view all reported incident select view incident report from option menu."
        />

</LinearLayout>